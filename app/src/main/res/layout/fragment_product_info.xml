<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="22dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.purchase.screens.ProductInfoFragment">

    <TextView
        android:id="@+id/tv_item_name_and_price"
        style="@style/AndroidPoint500Medium14"
        android:textColor="@color/toss_gray_name_and_price"
        android:text="@string/productinfo_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_item_description"
        style="@style/AndroidPoint400Medium14"
        android:textColor="@color/toss_gray_name_and_price"
        android:text="@string/productinfo_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_name_and_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>