<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="285dp"
        android:layout_height="285dp"
        android:contentDescription="나랑드사이다"
        android:src="@drawable/img_cider_aos3x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_product_title"
        style="@style/AndroidBody3Medium11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="나랑드 사이다 제로 350ml"
        app:layout_constraintStart_toStartOf="@id/iv_product"
        app:layout_constraintTop_toBottomOf="@id/iv_product" />

    <TextView
        android:id="@+id/tv_discount_rate"
        style="@style/AndroidTitle2Bold16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="70%"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="@id/iv_product"
        app:layout_constraintTop_toBottomOf="@id/tv_product_title" />

    <TextView
        android:id="@+id/tv_product_price"
        style="@style/AndroidTitle2Bold16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:text="8,900원"
        android:textColor="@color/grey_400"
        app:layout_constraintStart_toEndOf="@id/tv_discount_rate"
        app:layout_constraintTop_toBottomOf="@id/tv_product_title" />

    <ImageView
        android:id="@+id/iv_profiles"
        android:layout_width="37dp"
        android:layout_height="15dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/img_profiles1"
        app:layout_constraintStart_toStartOf="@id/iv_product"
        app:layout_constraintTop_toBottomOf="@id/tv_discount_rate" />

    <TextView
        android:id="@+id/tv_people"
        style="@style/AndroidBody3Medium11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:text="9,536명이 구매중"
        android:textColor="@color/grey_300"
        app:layout_constraintStart_toEndOf="@id/iv_profiles"
        app:layout_constraintTop_toBottomOf="@id/tv_discount_rate" />

</androidx.constraintlayout.widget.ConstraintLayout>